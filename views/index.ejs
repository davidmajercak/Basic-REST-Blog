<%- include ("partials/header")%>

<div class="ui main text container">
	<div class="ui huge header">
			RESTful Blog
	</div>
	<div class="ui top attached segment">
		<!-- automatic divider placed between items -->
		<div class="ui divided items">
			<% blogs.forEach(function(blog){ %>
				<div class="item">
					<div class="image">
						<img src="<%= blog.image %>">
					</div>
					<div class="content">
						<a class="header" href="/blogs/<%= blog._id%>">
							<%= blog.title %>
						</a>
						<div class="meta">
							<span>
								<em><%= blog.created.toDateString() %></em>
							</span>
						</div>
						<div class="description">
							<p>
								<%- blog.body.substring(0,100) %>
								<!-- only create ellipsis if body is longer than 100 char length  -->
								<% if(blog.body.length > 100) { %>
								...
								<%} %>
							</p>
						</div>
						<div class="extra">
							<a class="ui floated basic violet button" href="/blogs/<%= blog._id%>">
								Read More
								<i class="right chevron icon"></i>
							</a>
						</div>
					</div>
				</div>
			<% }) %>
		</div>
	</div>
</div>

<%- include ("partials/footer")%>